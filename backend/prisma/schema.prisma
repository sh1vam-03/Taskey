generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//============================
// ENUMS
//============================

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum Mood {
  HAPPY
  NEUTRAL
  SAD
}

enum OtpPurpose {
  EMAIL_VERIFICATION
  PASSWORD_RESET
}

enum RecurrenceType {
  NONE
  DAILY
  WEEKLY
  MONTHLY
}

//============================
// USER MODEL
//============================

model User {
  id              String  @id @default(uuid())
  name            String
  email           String  @unique
  password        String
  isEmailVerified Boolean @default(false)
  timezone        String? // e.g. "Asia/Kolkata"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks           Task[]
  schedules       Schedule[]
  behaviors       BehaviorLog[]
  otps            Otp[]
  taskCompletions TaskCompletion[]
  categories      Category[]
}

//============================
// OTP MODEL (Email Verification & Reset)
//============================

model Otp {
  id        String     @id @default(uuid())
  code      String // hashed OTP recommended
  purpose   OtpPurpose
  expiresAt DateTime
  isUsed    Boolean    @default(false)

  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, purpose])
}

//============================
// TASK MANAGEMENT
//============================

model Task {
  id          String       @id @default(uuid())
  title       String
  description String?
  priority    TaskPriority @default(MEDIUM)
  dueDate     DateTime?
  order       Int?

  // Category relation
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  schedules   Schedule[]
  completions TaskCompletion[]

  isArchived Boolean   @default(false)
  deletedAt  DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([categoryId])
}

model Category {
  id    String  @id @default(uuid())
  name  String
  color String? // optional (UI use)
  icon  String? // optional

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  tasks Task[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name]) // user cannot have duplicate category names
  @@index([userId])
}

model TaskCompletion {
  id            String   @id @default(uuid())
  completedDate DateTime @db.Date
  completedAt   DateTime @default(now())

  taskId String
  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([taskId, completedDate])
  @@index([userId, completedDate])
  @@index([taskId])
}

//============================
// SCHEDULE PLANNER
//============================

model Schedule {
  id    String  @id @default(uuid())
  notes String?

  scheduleDate DateTime @db.Date
  startTime    DateTime @db.Time
  endTime      DateTime @db.Time

  recurrence   RecurrenceType @default(NONE)
  repeatUntil  DateTime?      @db.Date
  repeatOnDays Int[]          @default([]) // [1, 3, 6, 7] â†’ Mon, Wed, Sat, Sun

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  taskId String
  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([userId, scheduleDate])
  @@index([taskId])
}

//============================
// BEHAVIOR & HABIT TRACKING
//============================

model BehaviorLog {
  id                String   @id @default(uuid())
  date              DateTime @db.Date
  mood              Mood
  productivityScore Int
  sleepHours        Float?
  exercise          Boolean  @default(false)
  notes             String?

  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}

model ContactUs {
  id      String @id @default(uuid())
  name    String
  email   String
  subject String
  message String

  createdAt DateTime @default(now())

  @@index([email])
}
