generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//////////////////////
// ENUMS
//////////////////////

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum Mood {
  HAPPY
  NEUTRAL
  SAD
}

enum OtpPurpose {
  EMAIL_VERIFICATION
  PASSWORD_RESET
}

enum RecurrenceType {
  NONE
  DAILY
  WEEKLY
  MONTHLY
}

//////////////////////
// USER
//////////////////////

model User {
  id              String  @id @default(uuid())
  name            String
  email           String  @unique
  password        String
  isEmailVerified Boolean @default(false)
  timezone        String? // e.g. "Asia/Kolkata"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks                Task[]
  schedules            Schedule[]
  scheduleCompletions  ScheduleCompletion[]
  taskDailyCompletions TaskDailyCompletion[]
  missedSchedules      MissedSchedule[]
  categories           Category[]
  behaviors            BehaviorLog[]
  otps                 Otp[]
}

//////////////////////
// OTP
//////////////////////

model Otp {
  id        String     @id @default(uuid())
  code      String
  purpose   OtpPurpose
  expiresAt DateTime
  isUsed    Boolean    @default(false)

  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, purpose])
}

//////////////////////
// TASK
//////////////////////

model Task {
  id          String       @id @default(uuid())
  title       String
  description String?
  priority    TaskPriority @default(MEDIUM)
  dueDate     DateTime?
  order       Int?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  schedules        Schedule[]
  dailyCompletions TaskDailyCompletion[]

  isArchived Boolean   @default(false)
  deletedAt  DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([categoryId])
}

//////////////////////
// CATEGORY
//////////////////////

model Category {
  id    String  @id @default(uuid())
  name  String
  color String?
  icon  String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  tasks Task[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
  @@index([userId])
}

//////////////////////
// SCHEDULE
//////////////////////

model Schedule {
  id    String  @id @default(uuid())
  notes String?

  scheduleDate DateTime @db.Date
  startTime    DateTime @db.Time
  endTime      DateTime @db.Time

  recurrence   RecurrenceType @default(NONE)
  repeatUntil  DateTime?      @db.Date
  repeatOnDays Int[]          @default([])

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  taskId String
  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)

  // ðŸ”¥ FIX HERE
  completions     ScheduleCompletion[]
  missedSchedules MissedSchedule[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([taskId])
  @@index([userId])
  @@index([userId, scheduleDate])
  @@index([recurrence, scheduleDate])
  @@index([repeatUntil])
}

//////////////////////
// SCHEDULE COMPLETION (MOST IMPORTANT)
//////////////////////

model ScheduleCompletion {
  id          String   @id @default(uuid())
  completedAt DateTime @default(now())
  completedOn DateTime @db.Date

  scheduleId String
  schedule   Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([scheduleId, completedOn])
  @@index([userId, completedOn])
  @@index([completedOn])
  @@index([scheduleId])
}

//////////////////////
// TASK DAILY COMPLETION (NO SCHEDULE)
//////////////////////

model TaskDailyCompletion {
  id            String   @id @default(uuid())
  completedDate DateTime @db.Date
  completedAt   DateTime @default(now())

  taskId String
  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([taskId, completedDate])
  @@index([completedDate])
  @@index([userId, completedDate])
}

//////////////////////
// MISSED SCHEDULE (CRON GENERATED)
//////////////////////

model MissedSchedule {
  id       String   @id @default(uuid())
  missedAt DateTime @default(now())
  missedOn DateTime @db.Date

  scheduleId String
  schedule   Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([scheduleId, missedOn])
  @@index([missedOn])
  @@index([userId, missedOn])
  @@index([scheduleId])
}

//////////////////////
// BEHAVIOR LOG
//////////////////////

model BehaviorLog {
  id         String   @id @default(uuid())
  date       DateTime @db.Date
  mood       Mood
  sleepHours Float?
  exercise   Boolean  @default(false)
  notes      String?

  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}

//////////////////////
// CONTACT US
//////////////////////

model ContactUs {
  id      String @id @default(uuid())
  name    String
  email   String
  subject String
  message String

  createdAt DateTime @default(now())

  @@index([email])
}
