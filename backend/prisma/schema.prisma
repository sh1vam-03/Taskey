generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

//============================
// ENUMS
//============================

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum TaskStatus {
  PENDING
  COMPLETED
}

enum Mood {
  HAPPY
  NEUTRAL
  SAD
}

enum OtpPurpose {
  EMAIL_VERIFICATION
  PASSWORD_RESET
}

enum RecurrenceType {
  NONE
  DAILY
  WEEKLY
  MONTHLY
}

//============================
// USER MODEL
//============================

model User {
  id              String  @id @default(uuid())
  name            String
  email           String  @unique
  password        String
  isEmailVerified Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks     Task[]
  schedules Schedule[]
  behaviors BehaviorLog[]
  otps      Otp[]
}

//============================
// OTP MODEL (Email Verification & Reset)
//============================

model Otp {
  id        String     @id @default(uuid())
  code      String // hashed OTP recommended
  purpose   OtpPurpose
  expiresAt DateTime
  isUsed    Boolean    @default(false)

  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, purpose])
}

//============================
// TASK MANAGEMENT
//============================

model Task {
  id          String       @id @default(uuid())
  title       String
  description String?
  priority    TaskPriority @default(MEDIUM)
  status      TaskStatus   @default(PENDING)
  dueDate     DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  schedules Schedule[]
}

//============================
// SCHEDULE PLANNER
//============================

model Schedule {
  id String @id @default(uuid())

  scheduleDate DateTime @db.Date
  startTime    DateTime @db.Time
  endTime      DateTime @db.Time

  recurrence   RecurrenceType @default(NONE)
  repeatUntil  DateTime?      @db.Date
  repeatOnDays Int[] // [1, 3, 6, 7] â†’ Mon, Wed, Sat, Sun

  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  taskId String
  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([userId, scheduleDate])
}

//============================
// BEHAVIOR & HABIT TRACKING
//============================

model BehaviorLog {
  id                String   @id @default(uuid())
  date              DateTime @db.Date
  mood              Mood
  productivityScore Int
  sleepHours        Float?
  exercise          Boolean  @default(false)
  notes             String?

  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}

model ContactUs {
  id      String @id @default(uuid())
  name    String
  email   String
  subject String
  message String

  createdAt DateTime @default(now())

  @@index([email])
}
